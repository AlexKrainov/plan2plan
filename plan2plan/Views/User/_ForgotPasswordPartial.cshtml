@if (string.IsNullOrEmpty(ViewBag.Success) == false)
{
    <div class="alert alert-success">
        @ViewBag.Success @*@Html.ActionLink("Вернуться на главную страницу", "Index", "Home", null, new { @class = "alert-link" })*@
    </div>
}
@if (string.IsNullOrEmpty(ViewBag.ErrorMessage) == false)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
@if (string.IsNullOrEmpty(ViewBag.NotExist) == false)
{
    <div class="alert alert-warning">
        @ViewBag.NotExist
    </div>
}
