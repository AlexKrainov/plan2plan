
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="team" class="wow fadeInUp" style="visibility: visible; animation-name: fadeInUp; margin-bottom: 40px;">
    <div class="container">
        @using (Html.BeginForm("Enter", "Auth", FormMethod.Get, new { @class = "modal-content form" }))
        {

            @Html.AntiForgeryToken()
            <div class="modal-header">
                <h5 class="modal-title">Войти</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Логин</label>
                    <input class="form-control" type="text" id="login" name="login" required>
                    <!--<p class="help-block">Example block-level help text here.</p>-->
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    <input class="form-control" type="password" id="pwd" name="pwd" required>
                </div>
                <div class="form-group">
                    <input class="check-box" data-val="true" id="remember" name="remember" type="checkbox" value="true">
                    <input name="remember" type="hidden" value="false">
                    <label>Запомнить меня ?</label>
                </div>
                <div class="errormessage">@ViewBag.ErrorMessage</div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-outline-primary">Войти</button>
            </div>
        }
    </div>
</section>